<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@color/comet_black">

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/startConstraint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_begin="32dp"
            android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/endConstraint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_end="32dp"
            android:orientation="vertical"/>

    <ImageView
            android:id="@+id/splash_logo"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/comet"/>

    <!--
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/app_version"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_fileName="splash.json"
        app:lottie_loop="true" />
        -->

    <TextView
            android:id="@+id/splash_welcome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/splash_logo"
            android:textColor="@color/comet_yellow"
            app:layout_constraintStart_toStartOf="@+id/startConstraint"
            app:layout_constraintEnd_toEndOf="@+id/endConstraint"
            android:gravity="center"
            android:text="@string/splash_welcome"
            android:visibility="gone"/>

    <TextView
            android:id="@+id/team_selection_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/comet_yellow"
            app:layout_constraintStart_toStartOf="@+id/startConstraint"
            app:layout_constraintEnd_toEndOf="@+id/endConstraint"
            android:fontFamily="sans-serif"
            android:text="@string/register_role_placeholder"
            app:layout_constraintTop_toBottomOf="@+id/splash_welcome"
            android:visibility="gone"/>

    <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/team_selection_spinner"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:prompt="@string/register_role_placeholder"
            app:layout_constraintStart_toStartOf="@+id/startConstraint"
            app:layout_constraintEnd_toEndOf="@+id/endConstraint"
            app:layout_constraintTop_toBottomOf="@+id/team_selection_title"
            android:theme="@style/AppTheme.spinner"
            android:visibility="gone"/>

    <Button
            android:id="@+id/validate_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/app_version"
            app:layout_constraintStart_toStartOf="@+id/startConstraint"
            app:layout_constraintEnd_toEndOf="@+id/endConstraint"
            android:layout_marginBottom="@dimen/default_margin"
            android:text="@string/action_next"
            android:visibility="gone"/>

    <TextView
            android:id="@+id/app_version"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="@dimen/default_padding"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/comet_yellow"
            tools:text="version 1.0.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>